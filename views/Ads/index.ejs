<%- include('../partials/_head.ejs')%>
<%- include('../partials/_navbar.ejs') %> 
<body>
  <div class="ads-page-container">
    <div class="ads-header">
      <h1>Your Ads</h1>
      <a class="add-ad-btn" href="/Ads/<%= user._id %>/new">
        <i class="fa fa-plus-circle"></i> Add New Ad
      </a>
    </div>
    <ul class="ads-list">
      <% myAds.forEach((ad) => { %>
        <% if (ad.owner.toString() === user._id.toString()) { %>
        <li class="ads-list-item">
          <a href="/Ads/<%= user._id %>/Ads/<%= ad._id %>">
            <h4><%= ad.title %></h4>
            <img src="/Ads/<%= ad.img %>" width="100px" height="auto"/>
          </a>
        </li>
      <% }}) %>
    </ul>
  </div>
</body>
