<%- include('../partials/_head.ejs') %>
<%- include('../partials/_navbar.ejs') %>
<body>
  <div class="overlay">
    <div class="container">
      <div class="edit-box">
        <h1>Edit Ad</h1>
        <form action="/Ads/<%= ad._id %>?_method=PUT" method="POST">
          <label for="title">Title:</label>
          <input type="text" id="title" name="title" value="<%= ad.title %>" required>

          <label for="price">Price:</label>
          <input type="number" id="price" name="price" value="<%= ad.price %>" required>

          <label for="description">Description:</label>
          <textarea id="description" name="description" required><%= ad.description %></textarea>

          <label for="category">Category:</label>
          <select id="category" name="category" required>
            <option value="books" <%= ad.category === 'books' ? 'selected' : '' %>>Books</option>
            <option value="phones" <%= ad.category === 'phones' ? 'selected' : '' %>>Phones</option>
            <option value="cars" <%= ad.category === 'cars' ? 'selected' : '' %>>Cars</option>
            <option value="spare parts" <%= ad.category === 'spare parts' ? 'selected' : '' %>>Spare Parts</option>
          </select>

          <button type="submit">Update Ad</button>
        </form>
      </div>
    </div>
  </div>
</body>

